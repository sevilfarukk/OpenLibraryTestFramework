{
  "name": "open-library-playwright-framework",
  "version": "1.0.0",
  "private": true,
  "description": "Scalable Playwright + TypeScript automation framework for Open Library",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "playwright test --pass-with-no-tests",
    "test:api": "playwright test tests/api --pass-with-no-tests",
    "test:ui": "playwright test tests/ui --pass-with-no-tests",
    "test:headed": "playwright test --headed --project=chromium --pass-with-no-tests",
    "report:allure": "allure generate ./allure-results --clean -o ./allure-report",
    "report:html": "playwright show-report"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.30.0",
    "@typescript-eslint/parser": "^8.30.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.2.0",
    "dotenv": "^16.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.2",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
